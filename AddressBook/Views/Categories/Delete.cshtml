@model AddressBook.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<h1 class="display-6 text-primary text-center mt-4 text-danger">Are you sure you want to delete this category?</h1>

<div class="container-sm d-flex justify-content-center align-items-center">
    <div class="row p-3 border border-2 shadow-lg bg-light mt-4" style="width: 35rem;">
        <div class="col-12 text-center mt-3">
            <h1 class="display-6">@Html.DisplayFor(model => model.Name)</h1>
        </div>
        <form asp-action="Delete" class="mt-3 row">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-outline-danger" />
            <a asp-action="Index" class="btn btn-outline-secondary mt-2">Never mind</a>
        </form>
    </div>

</div>

