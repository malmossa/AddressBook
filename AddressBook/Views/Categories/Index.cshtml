@model IEnumerable<AddressBook.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<div class="row mt-5">
    <div class="col-12 text-end mb-2">
        <a class="btn btn-secondary rounded-pill" asp-action="Create">Add New Category</a>
    </div>
</div>

<div class="row mt-2">
    <div class="col-12">
        <table class="table table-hover">
            <thead>
                <tr class="table-primary">
                    <th colspan="2">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>

                        <td class="d-flex justify-content-end">
                            <a class="me-3 editIcons" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-fill text-secondary"></i></a>
                            <a class="me-3 editIcons" asp-action="EmailCategory" asp-route-id="@item.Id"><i class="bi bi-envelope-fill text-secondary"></i></a>
                            <a class="me-3 editIcons" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash-fill text-danger "></i></a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
