@model AddressBook.Models.Contact
@using AddressBook.Services.Interfaces

@inject IImageService ImageService

@{
    ViewData["Title"] = "Delete";
}


<h1 class="display-6 text-primary text-center mt-4 text-danger">Are you sure you want to delete this contact?</h1>

<div class="row p-3 border border-2 shadow-lg bg-light mt-4">

    <div class="col-12 col-lg-4">
        <div class="square-img-container">
            @if (Model.ImageData != null)
            {
                <img class="square-img rounded" src="@ImageService.ConvertByteArrayToFile(Model.ImageData, Model.ImageType!)" />

            }
            else
            {
                <img class="square-img rounded" src="~/img/DefaultContactImage.png" />
            }
        </div>
    </div>

    <div class="col-12 col-lg-8">
        <div class="row ms-3 mt-5">
            <h1 class="display-6">@Html.DisplayFor(model => model.FullName)</h1>
            <h5>@Html.DisplayFor(model => model.Address1)</h5>
            @if (Model.Address2 != null)
            {
                <h5>@Html.DisplayFor(model => model.Address2)</h5>
            }
            <h5>@Html.DisplayFor(model => model.City), @Html.DisplayFor(model => model.State), @Html.DisplayFor(model => model.ZipCode)</h5>
            <br />
            <h5>DOB: @Html.DisplayFor(model => model.BirthDate)</h5>
            <h5>Phone: @Html.DisplayFor(model => model.PhoneNumber)</h5>
            <h5>Email: @Html.DisplayFor(model => model.Email)</h5>
        </div>
    </div>
    <form asp-action="Delete" class="mt-3 row">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary mt-2">Never mind</a>
    </form>

</div>

